#!/bin/sh
export CSCOPE_DB=$(pwd)
find . \( -path '*/i686*/*' -o -path '*/.git*' -o -path '*/.svn*' \) -prune -o -type f \( \
       -name '*.py' \
       -o -name '*.java' \
       -o -iname '*.[CH]' \
       -o -name '*.cpp' \
       -o -name '*.cc' \
       -o -name '*.hpp'  \
       -o -name '*.java'  \
       -o -name '*.xml'  \
       -o -name '*.in' \
       -o -name '*.php' \
       -o -name '*.js' \
       -o -name '*.css' \
       -o -name 'CMakeLists.txt' \
       \) -print \
       > cscope.files

# -b: just build
# -q: create inverted index
cscope -bvq

